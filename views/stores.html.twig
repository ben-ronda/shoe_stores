<!DOCTYPE html>
<html>
    <head>
        <title>Shoe Stores</title>
    </head>
    <body>
        <h1>{{ brand.getName }}</h1>

        <h4>Here are the stores that offer {{ brand.getName }}</h4>
        {% if stores is not empty %}
            <ul>
                {% for store in stores %}
                    <li>{{ store.getName }}</li>
                {% endfor %}
            </ul>
        {% endif %}

        <form action="/brand/{{ brand.getId }}" method="post">
            <input type="hidden" id="brand_id" name="brand_id" value="{{ store.getId }}">
            <label for="store_id">Select a Store:</label>
            <select name="store_id">
                {% for store in all_stores %}
                    <option value="{{ store.getId }}">{{ store.getName }}</option>
                {% endfor %}
            </select>
            <button type="submit">Add Stores</button>
        </form>

        <form action="/">
            <button type="submit" name="button">Home</button>
        </form>
    </body>
</html>
